<%- include('../partials/header.ejs', {title: 'Suppliers'}) %>
<div class="mt-4" style="width: 80vw; margin: 0 auto;">
    <a class="btn btn-outline-primary" href="/suppliers/add" role="button">Add Supplier</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% suppliers.forEach(supplier => { %>
            <tr>
                <th scope="row"><%= supplier.id %></th>
                <td><%= supplier.name %></td>
                <td><%= supplier.address %></td>
                <td><%= supplier.phone_number  %></td>
                <td>
                    <a class="btn btn-outline-warning" href="/suppliers/<%= supplier.id %>/edit" role="button">Edit</a>
                    <a class="btn btn-outline-danger" href="/suppliers/<%= supplier.id %>/delete" role="button">Delete</a>
                </td>
            </tr>
            <% }) %> 
        </tbody>
    </table>
</div>
        
<%- include('../partials/footer.ejs') %>
