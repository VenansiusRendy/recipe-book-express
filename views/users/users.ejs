<%- include('../partials/header.ejs', {title: 'Users'}) %>
<div class="mt-4" style="width: 80vw; margin: 0 auto;">
    <a class="btn btn-outline-primary" href="/users/add" role="button">Add User</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user, i) => { %>
            <tr>
                <th scope="row"><%= i + 1%></th>
                <td><%= user.name%></td>
                <td><%= user.email %></td>
                <td><%= user.role  %></td>
                <td>
                    <a class="btn btn-outline-danger" href="/users/<%= user.id %>/delete" role="button">Delete</a>
                </td>
            </tr>
            <% }) %> 
        </tbody>
    </table>
</div>
        
<%- include('../partials/footer.ejs') %>
